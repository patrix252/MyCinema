<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>filters.RegisterFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RequestQueryFilter</filter-name>
        <filter-class>filters.RequestQueryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestQueryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/registrazione.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>PrenotationServlet</servlet-name>
        <servlet-class>servlets.PrenotationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagamentoServlet</servlet-name>
        <servlet-class>servlets.PagamentoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePrenotation</servlet-name>
        <servlet-class>servlets.DeletePrenotation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordReminder</servlet-name>
        <servlet-class>servlets.PasswordReminder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrenotationServlet</servlet-name>
        <url-pattern>/PrenotationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagamentoServlet</servlet-name>
        <url-pattern>/PagamentoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePrenotation</servlet-name>
        <url-pattern>/DeletePrenotation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordReminder</servlet-name>
        <url-pattern>/PasswordReminder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:mysql://127.0.0.1/myCinema</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>asdd</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>start.jsp</welcome-file>
    </welcome-file-list>
</web-app>
