<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>filters.RegisterFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RequestQueryFilter</filter-name>
        <filter-class>filters.RequestQueryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestQueryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/registrazione.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ServletContextListener</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:mysql://46.101.19.71/myCinema</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>user</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>asdd</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
